apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    k8s-app: telegraf-sa
  name: telegraf-sa
  namespace: monitoring
data:
  cluster_name: {{ KOPS_CLUSTER_NAME }}
  telegraf.conf: |
    [global_tags]
      account = "mozilla-sumo"
      product = "${CLUSTER_NAME}"
      k8s-cluster = "${CLUSTER_NAME}"
      environment = "${ENV}"
    [agent]
      hostname = "$HOSTNAME"

    # INPUTS
    #
    # Kube-state-metrics
    [[inputs.prometheus]]
      urls = ["http://kube-state-metrics.monitoring.svc.cluster.local:8080/metrics"]

    # OUTPUTS
    [[outputs.influxdb]]
      urls = ["${INFLUX_URL}"]
      database = "${INFLUX_DB}"
      timeout  = "15s"
      username = "${INFLUX_USER}"
      password = "${INFLUX_PW}"
